<div class="container mt-3">
  <div class="row">
 
    <!-- 左側 -->
    <div class="col-md-3">
      <%= render 'books/user_info', user: @book.user %>
      <%= render 'books/new_book', book: Book.new %>
    </div>

    <!-- 右側 -->
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>

    <table class="table">
      <tbody>
        <% if @book.title.present? && @book.body.present? %>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100, 100), width: 100, height: 100, class: "rounded-circle" %>
              <div class><%= link_to @book.user.name, user_path(@book.user) %></div>
            </td>
            <td>
              <div class><%= link_to @book.title, book_path(@book) %></div>
            </td>
            <td>
              <div class><%= simple_format(@book.body) %></div>
            </td>
            <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success mb-2" %><br>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger" %>
              </td>
            <% end %>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>