<div class="container mt-3">
  <div class="row">
 
    <!-- 左側 -->
    <div class="col-md-3">
      <h2>User info</h2>

      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image.variant(resize: "100x100"), class: "rounded-circle mb-3" %>
      <% else %>
        <%= image_tag "no_image.jpg", size: "100x100", class:"rounded-circle" %>
      <% end %>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
    
    <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-sm w-100" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>

    <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :body, "Opinion", class: "form-label" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
          <%= f.submit "Create Book", class: "btn btn-success" %>
        <% end %>
      </div>

    <!-- 右側 -->
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>

    <table class="table">
      <tbody>
        <% if @book.title.present? && @book.body.present? %>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100, 100), width: 100, height: 100, class: "rounded-circle" %>
            </td>
            <td>
              <div class><%= simple_format(@book.title) %></div>
            </td>
            <td>
              <div class><%= simple_format(@book.body) %></div>
            </td>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success mb-2" %><br>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>