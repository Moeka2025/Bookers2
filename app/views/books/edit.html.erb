<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">

    <%= form_with model: @book, local: true do |f| %>
      <h1 class="mt-3 mb-4">Editing Book</h1>

      <% if @book.errors.any? %>
      <div id="error_explanation">
        <p><%= pluralize(@book.errors.count, "error") %> prohibited this user from begin saved:</p>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div class="mb-3">
        <%= f.label :Title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :Opinion, class: "form-label" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <%= f.submit "Update Book", class: "btn btn-success mb-2" %>
    <% end %>

      <div class="d-flex justify-content gap-3 mt-2">
        <%= link_to "Show", book_path(@book) %>
        <span class="mx-2">|</span>
        <%= link_to "Back", books_path %>

      </div>
    </div>
  </div>
</div>