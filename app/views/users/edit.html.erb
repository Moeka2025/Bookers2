<div class="container">
  <div class="row justify-content-center">
  <div class="col-sm-12 col-md-8 col-lg-6">
    <h2 class="mt-3">User info</h2>
    <%= form_with model: @user do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label :profile_image, "Image" %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduciton, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>