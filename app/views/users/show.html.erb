<div class="container mt-3">
  <div class="row">
 
    <!-- 左側 -->
    <div class="col-md-3">
      <%= render 'books/user_info', user: @user %>
      <%= render 'books/new_book' %>
    </div>

    <!-- 右側 -->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
    <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
        <% if book.title.present? && book.body.present? %>
          <tr>
            <td>
            <!-- プロフィール画像 -->
              <%= image_tag book.user.get_profile_image(100, 100), class: "rounded-circle" %>
            </td>
            <td>
            <!-- タイトルにリンクを追加 -->
              <%= link_to book.title, book_path(book) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  </div>
</div>